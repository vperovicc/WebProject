
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Home.css">
</head>
<body>
    <div class="login">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error">@ViewBag.ErrorMessage</div>
        }
        <form action="/Home/Login" method="post">
            <h1>Login</h1>
            <p>Korisnicko ime</p>
            <input type="text" name="korIme" required />
            <p>Lozinka</p>
            <input type="password" name="lozinka" required />
            <input type="submit" value="Prijavi se" />
        </form>
    </div>
</body>
</html>
